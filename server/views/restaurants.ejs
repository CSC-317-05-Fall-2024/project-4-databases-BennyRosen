<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restaurants</title>
    <link rel="icon" href="icon.svg" type="image/svg+xml">
    <link rel="stylesheet" href="/styles.css">
    <script src="/scripts/restaurantCards.js" defer></script>
</head>
<body>
    <header class="head"></header>

    <main class="mainer">
        <div class="middle-rest">
            <% restaurants.forEach(restaurant => { %>
                <div class="image-container-rest">
                    <button class="delete-button" data-id="<%= restaurant.id %>">DELETE</button>
                    <img id="planets" src="<%= restaurant.photo %>" alt="<%= restaurant.name %>">
                    <div class="attraction-text-rest">
                        <h4><%= restaurant.name %></h4>
                        <h4><%= restaurant.address %></h4>
                        <h4><%= restaurant.phone %></h4>
                    </div>
                </div>
            <% }); %>
        </div>
    </main>

    <footer class="foot"></footer>

    <script src="scripts/header.js"></script>
</body>
</html>